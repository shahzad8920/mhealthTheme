<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="travis.thenewboston.com.mhealththeme.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout8"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView9"
        android:id="@+id/relativeLayout7"
        android:layout_alignLeft="@+id/relativeLayout8"
        android:layout_alignStart="@+id/relativeLayout8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5"
        android:id="@+id/relativeLayout6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        android:id="@+id/relativeLayout5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_alignTop="@+id/textView5"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/drop"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignLeft="@+id/relativeLayout7"
        android:layout_alignStart="@+id/relativeLayout7">
        <Spinner
            android:id="@+id/cuff_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"
            android:id="@+id/imageView"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="26dp"
        android:text="Record Patient Symptoms"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textColor="@color/Black"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Score"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/relativeLayout8"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_marginTop="14dp"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_below="@+id/section_label"
        android:layout_alignLeft="@+id/diagnose_tv"
        android:layout_alignStart="@+id/diagnose_tv"/>

    <TextView
        android:id="@+id/p_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_tv"
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/diagnose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnose"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/name_tv"
        />

    <TextView
        android:id="@+id/p_diagnose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/diagnose_tv"
        android:layout_alignRight="@+id/p_name_tv"
        android:layout_alignEnd="@+id/p_name_tv"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cough Sound"
        android:textColor="@color/Black"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/diagnose_tv"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lung Sound"
        android:textColor="@color/Black"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".28"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3">
        <Spinner
            android:id="@+id/lungs_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/drop"
            android:id="@+id/imageView2"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:layout_marginTop="11dp"
        android:textColor="@color/Black"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Respiration"
        android:textColor="@color/Black"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="O2 Saturation"
        android:textColor="@color/Black"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Consiousness Level"
        android:textColor="@color/Black"
        android:layout_below="@+id/relativeLayout7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"/>

</RelativeLayout>
